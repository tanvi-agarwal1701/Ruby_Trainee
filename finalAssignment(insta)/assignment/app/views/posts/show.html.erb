<p style="color: green"><%= notice %></p>

<%= render @post %>
<% if user_signed_in? %>
  <% like = current_user.likes.find_by(post: @post) %>
  <%  if like.nil? %>
  <%= button_to "like", likes_path, params: { like: { post_id: @post.id } }, method: :post %>
  <% else %>
  <%= button_to "DisLike", like_path(like), params: { like: { post_id: @post.id } }, method: :delete %>

  <% end %>
<% end %>
<p>Likes <%=  @post.likes.count %></p>
<% if user_signed_in? %>
  <% support = current_user.supports.find_by(post: @post) %>
  <% if support.nil? %>
    <%= button_to "Support", supports_path, params: { support: { post_id: @post.id } }, method: :post %>
  <% else %>
    <%= button_to "DisSupport", support_path(support), params: { support: { post_id: @post.id } }, method: :delete %>
  <% end %>
<% end %>
<p>Support <%=  @post.supports.count %></p>

<%if user_signed_in? %>
<% if current_user.id == @post.user_id %>
<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
 <%= button_to "Destroy this post", @post, method: :delete %>
</div>
<% end %>
<% end %>
<%= render "comments/form"%>
<% @post.comments.each do |comment| %>
  <%= comment.text %>
  <% if user_signed_in? %>
    <% like = current_user.comment_likes.find_by(comment: comment) %>
    <% if like.nil? %>
      <%= button_to "like", comment_likes_path, params: { like: { comment_id: comment.id } }, method: :post %>
    <% else %>
      <%= button_to "DisLike", comment_like_path(like), params: { like: { comment_id: comment.id } }, method: :delete %>
    <% end %>
  <% end %>
  <p>Likes <%=  comment.comment_likes.count %></p>
  

  <br>
  <% end %>
  

<%= link_to "Back to posts", posts_path %>
